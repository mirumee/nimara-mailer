{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": ".",
    "rootDir": "./src",
    "composite": false,
    "inlineSources": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": false,
    "incremental": true,
    "useUnknownInCatchVariables": false,
    "target": "ES2022",
    "module": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "removeComments": true,
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "jsx": "preserve"
  },
  "include": [
    "${configDir}/**/*.d.ts",
    "${configDir}/**/*.ts",
    "${configDir}/**/*.tsx"
  ],
  "exclude": [
    "${configDir}/**/node_modules/?!(@nimara-mailer)",
    "${configDir}/**/out",
    "${configDir}/**/dist",
    "${configDir}/**/build",
    "${configDir}/**/api.tsx",
    "${configDir}/**/graphql.schema.json",
    "${configDir}/**/graphql/schema.ts",
    "${configDir}/**/generated.ts",
    "${configDir}/**/.*"
  ]
}
